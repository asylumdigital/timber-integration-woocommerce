{% set product = fn('wc_get_product', post.id) %}
<li>

	{% do action( 'woocommerce_widget_product_item_start', wc ) %}

	<a href="{{ product.get_permalink()|e('esc_url') }}">
		{{ product.get_image() }}
		<span class="product-title">{{ product.get_name()|wp_kses_post }}</span>
	</a>

	{% if wc.show_rating %}
		{{ fn('wc_get_rating_html', product.get_average_rating()) }}
	{% endif %}

	{{ product.get_price_html() }}

	{% do action( 'woocommerce_widget_product_item_end', wc ) %}
</li>
