 # @package WooCommerce\Templates\Emails
 # @version 9.3.0
 #}


{# Load colors. #}
{% set bg          = fn('get_option', 'woocommerce_email_background_color' ) %}
{% set body        = fn('get_option', 'woocommerce_email_body_background_color' ) %}
{% set base        = fn('get_option', 'woocommerce_email_base_color' ) %}
{% set base_text   = fn('wc_light_or_dark', base, '#202020', '#ffffff' ) %}
{% set text        = fn('get_option', 'woocommerce_email_text_color' ) %}
{% set footer_text = fn('get_option', 'woocommerce_email_footer_text_color' ) %}

{# Pick a contrasting color for links. #}
{% set link_color = fn('wc_hex_is_light', base) ? base : base_text %}

{% if fn('wc_hex_is_light', body) %}
	{% set link_color = fn('wc_hex_is_light', base ) ? base_text : base %}
{% endif %}

{% set bg_darker_10    = fn('wc_hex_darker', bg, 10 ) %}
{% set body_darker_10  = fn('wc_hex_darker', body, 10 ) %}
{% set base_lighter_20 = fn('wc_hex_lighter', base, 20 ) %}
{% set base_lighter_40 = fn('wc_hex_lighter', base, 40 ) %}
{% set text_lighter_20 = fn('wc_hex_lighter', text, 20 ) %}
{% set text_lighter_40 = fn('wc_hex_lighter', text, 40 ) %}

{# !important; is a gmail hack to prevent styles being stripped if it doesn't like something. #}
{# body{padding: 0;} ensures proper scale/positioning of the email in the iOS native email app. #}
body {
	background-color: {{ bg|esc_attr }};
	padding: 0;
	text-align: center;
}

#outer_wrapper {
	background-color: {{ bg|esc_attr }};
}

#wrapper {
	margin: 0 auto;
	padding: 70px 0;
	-webkit-text-size-adjust: none !important;
	width: 100%;
	max-width: 600px;
}

#template_container {
	box-shadow: 0 1px 4px rgba(0, 0, 0, 0.1) !important;
	background-color: {{ body|esc_attr }};
	border: 1px solid {{ bg_darker_10|esc_attr }};
	border-radius: 3px !important;
}

#template_header {
	background-color: {{ base|esc_attr }};
	border-radius: 3px 3px 0 0 !important;
	color: {{ base_text|esc_attr }};
	border-bottom: 0;
	font-weight: bold;
	line-height: 100%;
	vertical-align: middle;
	font-family: "Helvetica Neue", Helvetica, Roboto, Arial, sans-serif;
}

#template_header h1,
#template_header h1 a {
	color: {{ base_text|esc_attr }};
	background-color: inherit;
}

#template_header_image img {
	margin-left: 0;
	margin-right: 0;
}

#template_footer td {
	padding: 0;
	border-radius: 6px;
}

#template_footer #credit {
	border: 0;
	color: {{ footer_text|esc_attr }};
	font-family: "Helvetica Neue", Helvetica, Roboto, Arial, sans-serif;
	font-size: 12px;
	line-height: 150%;
	text-align: center;
	padding: 24px 0;
}

#template_footer #credit p {
	margin: 0 0 16px;
}

#body_content {
	background-color: {{ body|esc_attr }};
}

#body_content table td {
	padding: 48px 48px 32px;
}

#body_content table td td {
	padding: 12px;
}

#body_content table td th {
	padding: 12px;
}

#body_content td ul.wc-item-meta {
	font-size: small;
	margin: 1em 0 0;
	padding: 0;
	list-style: none;
}

#body_content td ul.wc-item-meta li {
	margin: 0.5em 0 0;
	padding: 0;
}

#body_content td ul.wc-item-meta li p {
	margin: 0;
}

#body_content p {
	margin: 0 0 16px;
}

#body_content_inner {
	color: {{ text_lighter_20|esc_attr }};
	font-family: "Helvetica Neue", Helvetica, Roboto, Arial, sans-serif;
	font-size: 14px;
	line-height: 150%;
	text-align: {{ fn('is_rtl') ? 'right' : 'left' }};
}

.td {
	color: {{ text_lighter_20|esc_attr }};
	border: 1px solid {{ body_darker_10|esc_attr }};
	vertical-align: middle;
}

.address {
	padding: 12px;
	color: {{ text_lighter_20|esc_attr }};
	border: 1px solid {{ body_darker_10|esc_attr }};
}

.additional-fields {
	padding: 12px 12px 0;
	color: {{ text_lighter_20|esc_attr }};
	border: 1px solid {{ body_darker_10|esc_attr }};
	list-style: none outside;
}

.additional-fields li {
	margin: 0 0 12px 0;
}

.text {
	color: {{ text|esc_attr }};
	font-family: "Helvetica Neue", Helvetica, Roboto, Arial, sans-serif;
}

.link {
	color: {{ link_color|esc_attr }};
}

#header_wrapper {
	padding: 36px 48px;
	display: block;
}

#template_footer #credit,
#template_footer #credit a {
	color: {{ footer_text|esc_attr }};
}

h1 {
	color: {{ base|esc_attr }};
	font-family: "Helvetica Neue", Helvetica, Roboto, Arial, sans-serif;
	font-size: 30px;
	font-weight: 300;
	line-height: 150%;
	margin: 0;
	text-align: <?php echo is_rtl() ? 'right' : 'left'; ?>;
	text-shadow: 0 1px 0 {{ base_lighter_20|esc_attr }};
}

h2 {
	color: {{ base|esc_attr }};
	display: block;
	font-family: "Helvetica Neue", Helvetica, Roboto, Arial, sans-serif;
	font-size: 18px;
	font-weight: bold;
	line-height: 130%;
	margin: 0 0 18px;
	text-align: {{ fn('is_rtl') ? 'right' : 'left' }};
}

h3 {
	color: {{ base|esc_attr }};
	display: block;
	font-family: "Helvetica Neue", Helvetica, Roboto, Arial, sans-serif;
	font-size: 16px;
	font-weight: bold;
	line-height: 130%;
	margin: 16px 0 8px;
	text-align: {{ fn('is_rtl') ? 'right' : 'left' }};
}

a {
	color: {{ link_color|esc_attr }};
	font-weight: normal;
	text-decoration: underline;
}

img {
	border: none;
	display: inline-block;
	font-size: 14px;
	font-weight: bold;
	height: auto;
	outline: none;
	text-decoration: none;
	text-transform: capitalize;
	vertical-align: middle;
	margin-{{ fn('is_rtl') ? 'left' : 'right' }}: 10px;
	max-width: 100%;
}

{##
 #Media queries are not supported by all email clients, however they do work on modern mobile
 # Gmail clients and can help us achieve better consistency there.
 #}
@media screen and (max-width: 600px) {
	#header_wrapper {
		padding: 27px 36px !important;
		font-size: 24px;
	}

	#body_content table > tbody > tr > td {
		padding: 10px !important;
	}

	#body_content_inner {
		font-size: 10px !important;
	}
}
