<form role="search" method="get" class="woocommerce-product-search" action="{{ site.home_url }}">
	<label class="screen-reader-text" for="woocommerce-product-search-field-{{ wc.index|abs }}">{{ __( 'Search for:', 'woocommerce' )|e }}</label>
	<input type="search" id="woocommerce-product-search-field-{{ wc.index|abs }}" class="search-field" placeholder="{{ __( 'Search productsâ€¦', 'woocommerce' )|e('html_attr') }}" value="{{ fn('get_search_query') }}" name="s" />
	<button type="submit" value="{{ _x( 'Search', 'submit button', 'woocommerce' )|e('html_attr') }}" class="{{ fn('wc_wp_theme_get_element_class_name', 'button')|e('html_attr') }}">{{ _x( 'Search', 'submit button', 'woocommerce' )|e }}</button>
	<input type="hidden" name="post_type" value="product" />
</form>
